{
  "manifest_version": 3,
  "name": "Keka Real-Time calculation",
  "version": "2.0",
  "description": "Accurate effective hours calculation using Keka attendance logs API",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/keka-16.png",
      "32": "images/keka-32.png",
      "48": "images/keka-48.png",
      "128": "images/keka-128.png"
    }
  },
  "icons": {
    "16": "images/keka-16.png",
    "32": "images/keka-32.png",
    "48": "images/keka-48.png",
    "128": "images/keka-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.keka.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "tabs", "notifications"],
  "host_permissions": ["https://*.keka.com/*"]
}
